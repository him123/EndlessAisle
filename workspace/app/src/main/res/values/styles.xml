<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">5dip</item>
        <item name="android:paddingStart">8dip</item>
        <item name="android:paddingEnd">8dip</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- FONTS -->
    <style name="font_big_title">
        <item name="android:fontFamily">@font/proximanova_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="font_title">
        <item name="android:fontFamily">@font/proximanova_bold</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="font_content">
        <item name="android:fontFamily">@font/proximanova_light</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/grey_black</item>
    </style>

    <style name="font_descriptions">
        <item name="android:fontFamily">@font/proximanova_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/grey_black</item>
    </style>



    <style name="text_small">

        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="text_extra_small">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="text_big">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_19sdp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyCustomRadioButton" parent="@android:style/TextAppearance">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selectable_text_color_checked_state</item>
        <item name="android:background">@drawable/selectable_text_bg_color_checked_state</item>
        <item name="android:fontFamily">@font/proximanova_bold</item>
        <item name="android:textSize">14dp</item>
    </style>


    <style name="MyCustomRadioButtonCircular" parent="@android:style/TextAppearance">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selectable_text_color_checked_state_circle</item>
        <item name="android:background">@drawable/selectable_text_bg_color_checked_state_circle</item>
        <item name="android:fontFamily">@font/proximanova_bold</item>
        <item name="android:textSize">14dp</item>
    </style>


    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/black</item>
    </style>

</resources>
