<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.him.view.OrderConfirmationActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- HEADER TILT TEXT-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tilt"
                android:padding="@dimen/_2sdp">

                <TextView
                    style="@style/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Prices are inclusive all taxes"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <!-- AVAILABLE OFFERS -->
            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                card_view:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        style="@style/font_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Offers" />

                    <TextView
                        style="@style/font_descriptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="50% Cashback Voucher of up to Rs. 500 on first ever PayPal transaction. TCA" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FREE DELIVERY -->
            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                card_view:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_delivery" />

                    <TextView
                        style="@style/font_descriptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Yay!Free Delivery on this order." />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ITEM DESCRIPTION WITH IMAGE -->
            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                card_view:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp"

                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8">

                            <ImageView
                                android:id="@+id/imgProduct"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_120sdp"
                                android:background="@drawable/ic_launcher_background"
                                android:scaleType="matrix" />

                        </RelativeLayout>

                        <!-- RIGHT ITEM DETAILS-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1.2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtProductName"
                                style="@style/font_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Product name" />

                            <TextView
                                android:id="@+id/txtDescription"
                                style="@style/font_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Woman Black and Green Collared "
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/txtSoldby"
                                style="@style/text_extra_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sold by: H and M Homes" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/grey"
                                    android:padding="@dimen/_5sdp">

                                    <TextView
                                        style="@style/text_extra_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Size: M" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@color/grey"
                                    android:padding="@dimen/_5sdp">

                                    <TextView
                                        style="@style/text_extra_small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Qty: 1" />

                                </RelativeLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtPrice"
                                style="@style/font_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="â‚¹12402" />

                            <TextView
                                style="@style/text_extra_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30 Days Easy Return" />


                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:background="@color/grey" />

                    <!-- REMOVE MOVE TO LIST-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4">

                            <TextView
                                android:id="@+id/txtRemove"
                                style="@style/text_extra_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.4"
                                android:layout_centerInParent="true"
                                android:text="REMOVE" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2">

                            <View
                                android:layout_width="2dp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                android:background="@color/grey" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4">

                            <TextView
                                android:layout_centerInParent="true"
                                android:id="@+id/txtAddToWishList"
                                style="@style/text_extra_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MOVE TO WISHLIST" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/text_extra_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="COUPONS"
                android:textSize="@dimen/_11sdp" />

            <!-- COUPON -->
            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                card_view:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_coupon"
                            android:backgroundTint="@color/black" />

                        <TextView
                            style="@style/font_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:text="Apply Coupon" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/right_arrow" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- PRICE DETAILS -->
            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                card_view:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        style="@style/font_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRICE DETAILS" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- BAG TOTAL-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bag Total" />

                            <TextView
                                android:id="@+id/txtBagTot"
                                android:textColor="@color/grey_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="â‚¹ 14585" />

                        </RelativeLayout>

                        <!-- BAG DISCOUNT-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bag Discount" />

                            <TextView
                                android:textColor="@color/grey_black"
                                android:id="@+id/txtBagDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="â‚¹ 14585" />

                        </RelativeLayout>

                        <!-- COUPON DISCOUNT-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coupon Discount" />

                            <TextView
                                android:textColor="@color/grey_black"
                                android:id="@+id/txtCouponDis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="â‚¹ 14585" />

                        </RelativeLayout>

                        <!-- ORDER TOTAL-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order Total" />

                            <TextView
                                android:textColor="@color/grey_black"
                                android:id="@+id/txtOrderTot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="â‚¹ 14585" />

                        </RelativeLayout>

                        <!-- DELIVERY CHARGES-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delivery Charges" />

                            <TextView
                                android:textColor="@color/grey_black"
                                android:id="@+id/txtDelCharges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="â‚¹ 14585" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/grey_black" />

                        <!-- TOTAL-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <TextView
                                style="@style/font_title"
                                android:textSize="@dimen/_14sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total" />

                            <TextView
                                android:id="@+id/txtTotal"
                                style="@style/font_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="â‚¹ 14585" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_70sdp" />
        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM BUTTONS-->
    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/main_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/font_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 7878" />

                    <TextView
                        style="@style/text_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIEW DETAILS" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:padding="@dimen/_5sdp">

                <Button
                    android:id="@+id/btnCheckout"
                    style="@style/font_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorAccent"
                    android:text="PLACE ORDER"
                    android:textColor="@color/white" />
            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
